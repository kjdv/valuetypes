struct Nested {
    string value;
};

struct Struct {
    double                x{0.0};
    double                y{0.0};
    int                   n{0};
    bool                  b1{false};
    bool                  b2{true};
    string                s;
    vector<int>           v;
    optional<int>         o1;
    optional<int>         o2;
    Nested                nested;
    optional<Nested>      o3;
    optional<Nested>      o4;
    optional<vector<int>> o5;
    optional<vector<int>> o6;
};

TEST(parser, read_mapping) {
    stringstream stream(R"(
{
    "x": 3.14,
    "y": 2.72,
    "n": 123,
    "b1": true,
    "b2": false,
    "s": "abc",
    "v": [1, 2, 3],
    "o1": null,
    "o2": 456,
    "nested": {
        "value": "def"
    },
    "o3": null,
    "o4": {
        "value": "abc"
    },
    "o5": null,
    "o6": [4, 5, 6]
})");
    Parser parser(&stream);
    Struct actual;
    parser.read_mapping<Struct>(actual, [](Parser& p, Struct& target, string_view key) {
        if(key == "x") {
            p.read_scalar<double>(target.x);
        } else if(key == "y") {
            p.read_scalar<double>(target.y);
        } else if(key == "n") {
            p.read_scalar<int>(target.n);
        } else if(key == "b1") {
            p.read_scalar<bool>(target.b1);
        } else if(key == "b2") {
            p.read_scalar<bool>(target.b2);
        } else if(key == "s") {
            p.read_scalar<string>(target.s);
        } else if(key == "v") {
            p.read_sequence<vector<int>>(target.v, [](Parser& p2, vector<int>& v) {
                int i;
                p2.read_scalar<int>(i);
                v.push_back(i);
            });
        } else if(key == "o1") {
            p.read_scalar<optional<int>>(target.o1);
        } else if(key == "o2") {
            p.read_scalar<optional<int>>(target.o2);
        } else if(key == "nested") {
            p.read_mapping<Nested>(target.nested, [](Parser& p2, Nested& n, string_view k) {
                if(k == "value") {
                    p2.read_scalar<string>(n.value);
                }
            });
        } else if(key == "o3") {
            p.read_mapping<optional<Nested>>(target.o3, [](Parser& p2, Nested& n, string_view k) {
                if(k == "value") {
                    p2.read_scalar<string>(n.value);
                }
            });
        } else if(key == "o4") {
            p.read_mapping<optional<Nested>>(target.o4, [](Parser& p2, Nested& n, string_view k) {
                if(k == "value") {
                    p2.read_scalar<string>(n.value);
                }
            });
        } else if(key == "o5") {
            p.read_sequence<optional<vector<int>>>(target.o5, [](Parser& p2, vector<int>& v) {
                int i;
                p2.read_scalar<int>(i);
                v.push_back(i);
            });
        } else if(key == "o6") {
            p.read_sequence<optional<vector<int>>>(target.o6, [](Parser& p2, vector<int>& v) {
                int i;
                p2.read_scalar<int>(i);
                v.push_back(i);
            });
        }
    });

    EXPECT_TRUE(parser.is_eof());

    EXPECT_EQ(3.14, actual.x);
    EXPECT_EQ(2.72, actual.y);
    EXPECT_EQ(123, actual.n);
    EXPECT_TRUE(actual.b1);
    EXPECT_FALSE(actual.b2);
    EXPECT_EQ("abc", actual.s);

    vector<int> ve{1, 2, 3};
    EXPECT_EQ(ve, actual.v);

    EXPECT_EQ(optional<int>(), actual.o1);
    EXPECT_EQ(optional<int>(456), actual.o2);

    EXPECT_EQ("def", actual.nested.value);
    EXPECT_FALSE(actual.o3);
    EXPECT_EQ("abc", actual.o4->value);

    EXPECT_FALSE(actual.o5);
    ve = {4, 5, 6};
    EXPECT_EQ(ve, *actual.o6);
}

